extends ../../../aalayout/layout

block content
	.container
		if info
			-a;
			.border.p-2.my-3.rounded.text-center.text-warning
				h3 #{info}
				.text-right
					a.btn.btn-default(href="/bsPdNomes") 确认
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item.active(aria-current="page") #{title}
		.row.my-3
			.col-6
				input#codeSearch.form-control(type="text")
			.col-6.text-right
				button.btn.btn-danger.jsDel-btnClick.mr-5(type="button") -
				a.btn.btn-warning(href="/bsPdspuAdd") +

		.PdNomesList
			button.PdNomeClick.btn.mt-3(type="button" data-pdnome="") 产品名称:
			button.PdNomeClick#PdNomeAll.btn.btn-success.ml-5.mt-3(type="button" data-pdnome="") 全部
			each PdNome in PdNomes
				-a;
				button.PdNomeClick.btn.btn-default.ml-4.mt-3(type="button" data-pdnome=PdNome._id) #{PdNome.code}
		.objectsList
			input#objectFilterAjax(type="hidden", value="/bsPdspusAjax?@#objectsElem@bs")
			#objectsElem.mt-5
	//- .container-fluid
		.row.mt-5
			.col-lg-3.px-5.mt-3
				span.mr-2 类别:
				span#PdCateg
				select.mt-4.PdcategSel#FirCateg.form-control(data-style="btn-info", data-level=1)
					option(value="All") 全部
					option(value="Null") 未分类
				select.mt-4.PdcategSel#SecCateg.form-control(data-style="btn-info", data-level=2, style="display:none")
					option(value="All") 全部
				select.mt-4.PdcategSel#ThdCateg.form-control(data-style="btn-info", data-level=3, style="display:none")
					option(value="All") 全部
			.col-lg-8
				.PdNomesList
					button.PdNomeClick.btn.mt-3(type="button" data-pdnome="") 产品名称:
					button.PdNomeClick#PdNomeAll.btn.btn-success.ml-5.mt-3(type="button" data-pdnome="") 全部
					each PdNome in PdNomes
						-a;
						button.PdNomeClick.btn.btn-default.ml-4.mt-3(type="button" data-pdnome=PdNome._id) #{PdNome.code}
				.objectsList
					input#objectFilterAjax(type="hidden", value="/bsPdspusAjax?@#objectsElem@bs")
					#objectsElem.mt-5
			.col-lg-1
	script(src="/js/bser/product/Pdspu/list.js")
	script(src="/js/dbs/product/Pdspu.js")