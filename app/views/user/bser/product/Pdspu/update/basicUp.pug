extends ../../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item: a(href="/bsPdspus") 产品列表
				li.breadcrumb-item: a(href="/bsPdspu/"+Pdspu._id) 产品详情
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		form.mt-5#objForm(method="post", action="/bsPdspuUpd", enctype="multipart/form-data")
			input(type="hidden", name="obj[_id]", value=Pdspu._id)
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="codeIpt") code
				.col-9.col-sm-6
					input#codeIpt.form-control(type="text", name="obj[code]", value=Pdspu.code)
				.offset-3.col-9.col-form-label#codeDanger.text-danger(style="display:none") 请输入正确的编号
			.form-group.row
				label.col-3.col-sm-2.col-form-label 分类
				- let PdCategFir = new Object();
				if Pdspu.PdCategFir
					- PdCategFir = Pdspu.PdCategFir;
				.col-3.col-sm-2
					input#ipt-PdCateg-1.iptPdCateg.form-control(type="hidden", name="obj[PdCategFir]", value=PdCategFir._id, autocomplete="off")
					input#req-PdCateg-1.reqPdCateg.form-control(type="text", value=PdCategFir.code, autocomplete="off")
				- let PdCategSec = new Object();
				if Pdspu.PdCategSec
					- PdCategSec = Pdspu.PdCategSec;
				.col-3.col-sm-2
					input#ipt-PdCateg-2.iptPdCateg.form-control(type="hidden", name="obj[PdCategSec]", value=PdCategSec._id, autocomplete="off")
					input#req-PdCateg-2.reqPdCateg.form-control(type="text", value=PdCategSec.code, autocomplete="off")
				- let PdCategThd = new Object();
				if Pdspu.PdCategThd
					- PdCategThd = Pdspu.PdCategThd;
				.col-3.col-sm-2
					input#ipt-PdCateg-3.iptPdCateg.form-control(type="hidden", name="obj[PdCategThd]", value=PdCategThd._id, autocomplete="off")
					input#req-PdCateg-3.reqPdCateg.form-control(type="text", value=PdCategThd.code, autocomplete="off")
				.offset-3.offset-sm-2.col-9.col-sm-6.col-form-label#PdCateg-box
			.form-group.row
				- let PdNome = new Object();
				if Pdspu.PdNome
					- PdNome = Pdspu.PdNome;
				label.col-3.col-sm-2.col-form-label PdNome
				.col-9.col-sm-6
					input#PdNomeIpt.form-control(type="hidden", name="obj[PdNome]" , value=PdNome._id, autocomplete="off")
					input#PdNomeReq.form-control(type="text", name="codePdNome", value=PdNome.code, autocomplete="off")
				.offset-3.offset-sm-2.col-9.col-sm-6.col-form-label#PdNomeDanger.text-danger(style="display:none") 请输入产品名称
				.offset-3.offset-sm-2.col-9.col-sm-6.col-form-label#PdNome-box
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="despIpt") desp
				.col-9.col-sm-6
					input#despIpt.form-control(type="text", name="obj[desp]", value=Pdspu.desp)
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="priceIpt") price
				.col-9.col-sm-6
					input#priceIpt.form-control(type="text", name="obj[price]", value=Pdspu.price)
				.offset-3.col-9.col-form-label#priceDanger.text-danger(style="display:none") 请输入正确的售价
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="costIpt") cost
				.col-9.col-sm-6
					input#costIpt.form-control(type="text", name="obj[cost]", value=Pdspu.cost)
				.offset-3.col-9.col-form-label#costDanger.text-danger(style="display:none") 请输入正确的采购价
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="weightIpt") weight
				.col-9.col-sm-6
					input#weightIpt.form-control(type="text", name="obj[weight]", value=Pdspu.weight)
				.offset-3.col-9.col-form-label#priceDanger.text-danger(style="display:none") 重量是数字
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isMtrialIpt") 是否耗材
				.col-9.col-sm-6
					select#isMtrialIpt.form-control(name="obj[isMtrial]", data-style="btn-info")
						option(value=1) 耗材
						if Pdspu.isMtrial == 0
							-a;
							option(value=0, selected="selected") 不耗材
						else
							option(value=0) 不耗材
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isSizeIpt") 分尺寸
				.col-9.col-sm-6
					select#isSizeIpt.form-control(name="obj[isSize]", data-style="btn-info")
						option(value=1) 分尺寸
						if Pdspu.isSize == 0
							-a;
							option(value=0, selected="selected") 统一尺寸
						else
							option(value=0) 统一尺寸
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="SizeSystIpt") 尺寸标准
				.col-9.col-sm-6
					select#SizeSystIpt.form-control(name="obj[SizeSyst]", data-style="btn-info")
						each SizeSyst in SizeSysts
							- code = "["+SizeSyst.code+"]";
							if String(Pdspu.SizeSyst) == String(SizeSyst._id)
								-a;
								option(value=SizeSyst._id, selected="selected") #{code}
							else
								option(value=SizeSyst._id) #{code}
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isColorIpt") 分颜色
				.col-9.col-sm-6
					select#isColorIpt.form-control(name="obj[isColor]", data-style="btn-info")
						option(value=1) 分颜色
						if Pdspu.isColor == 0
							-a;
							option(value=0, selected="selected") 统一颜色
						else
							option(value=0) 统一颜色
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isPternIpt") 是否印花
				.col-9.col-sm-6
					select#isPternIpt.form-control(name="obj[isPtern]", data-style="btn-info")
						option(value=1) 印花
						if Pdspu.isPtern == 0
							-a;
							option(value=0, selected="selected") 不印花
						else
							option(value=0) 不印花
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="sortIpt") sort
				.col-9.col-sm-6
					input#sortIpt.form-control(type="number", name="obj[sort]", value=Pdspu.sort)
			hr
			.form-group.row
				.offset-sm-6.col-sm-2
					input.btn.btn-success.btn-block(type="submit" value="确认")
	script(src="/js/bser/product/Pdspu/edit.js")