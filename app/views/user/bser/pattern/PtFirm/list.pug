extends ../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item.active(aria-current="page") #{title}
		.row.my-3
			.col-12.text-right
				a.btn.btn-warning(href="/bsPtFirmAdd") +

		- getUrl = "/bsPtFirmUpdAjax";
		.row
			each PtFirm in PtFirms
				- object = PtFirm;
				.col-6.col-lg-3.mt-4
					.card.text-center(style="width: 100%;")
						.card-body
							.code
								- field="code", value=PtFirm.code, subid="code", type="String";
								include ../../../../aaPlugin/ajaxInputUpd
							.weight.mt-3
								- field="weight", value=PtFirm.weight, subid="weight", type="Int";
								include ../../../../aaPlugin/ajaxInputUpd

