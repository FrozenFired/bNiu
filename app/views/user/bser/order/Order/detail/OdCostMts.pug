if Order.OdCostMts
	- OdCostMts = Order.OdCostMts;
	table.table.table-striped
		thead
			tr
				td 用料
				td 用量
				td 供货商
		tbody
			each OdCostMt in OdCostMts
				- Mtrial = OdCostMt.Mtrial;
				tr
					td #{Mtrial.code}
					td
						div #{OdCostMt.dosage} #{OdCostMt.pterns}
						if Mtrial.isPtern == 1
							- let Pterns = OdCostMt.Pterns;
							each ptern in Pterns
								- let Ptern = ptern.Ptern;
								.row
									.col-6 #{Ptern.code}
									.col-6 #{ptern.dosage}
					td #{Mtrial.MtFirm.code}
