extends ../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item: a(href="/bsMtrials") 材料列表
				li.breadcrumb-item: a(href="/bsMtrial/"+Mtrial._id) 材料详情
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		form.mt-5#objForm(method="post", action="/bsMtrialUpd", enctype="multipart/form-data")
			input(type="hidden", name="obj[_id]", value=Mtrial._id)
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="codeIpt") code
				.col-9.col-sm-6
					input#codeIpt.form-control(type="text", name="obj[code]", value=Mtrial.code)
				.offset-3.col-9.col-form-label#codeDanger.text-danger(style="display:none") 请输入正确的编号
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isBottomIpt") 底层
				.col-9.col-sm-6
					select#isBottomIpt.form-control(name="obj[MtCateg]", data-style="btn-info")
						option(value="") 不分类
						each MtCateg in MtCategs
							- code = "["+MtCateg.code+"]";
							if MtCateg.MtCategFar
								- let Far = MtCateg.MtCategFar
								- code = Far.code+" -> "+code;
								if Far.MtCategFar
									- code = Far.MtCategFar.code+" -> "+code;
							if String(Mtrial.MtCateg) == String(MtCateg._id)
								-a;
								option(value=MtCateg._id, selected="selected") #{code}
							else
								option(value=MtCateg._id) #{code}
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="weightIpt") weight
				.col-9.col-sm-6
					input#weightIpt.form-control(type="number", name="obj[weight]", value=1)
			hr
			.form-group.row
				.offset-sm-6.col-sm-2
					input.btn.btn-success.btn-block(type="submit" value="确认")