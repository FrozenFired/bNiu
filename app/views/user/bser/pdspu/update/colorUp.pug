extends ../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item: a(href="/bsPdspus") 产品列表
				li.breadcrumb-item: a(href="/bsPdspu/"+Pdspu._id) 产品详情
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		h4 产品颜色(已选)
		.row#ColoredsBox
			each Color in Pdspu.Colors
				- var colorCode = ' ';
				if Color.code
					- colorCode = Color.code;
					if colorCode.length > 8
						- colorCode = colorCode.slice(0,6) + '...';
				.col-4.col-md-6.col-xl-1.mt-3(id="Colored-"+Color._id)
					.colorClick(style="background-Color:#"+Color.rgb+"; height: 30px", data-pdspuid=Pdspu._id, data-colorid=Color._id, data-rgb=Color.rgb, data-code=Color.code, data-option=-1, title=Color.code)
					.code(class="text-success", style="Font-size: 8px", title=Color.code) #{colorCode}
		hr
		h4 颜色池(未选)
		.row#ColorPoolsBox
			each Color in Colors
				- var flag = 0;
				each cl in Pdspu.Colors
					if String(cl._id) == String(Color._id)
						- flag = 1;
						- break;
				if flag == 1
					- continue;
				- var colorCode = ' ';
				if Color.code
					- colorCode = Color.code;
					if colorCode.length > 8
						- colorCode = colorCode.slice(0,6) + '...';
				.col-4.col-md-6.col-xl-1.mt-3(id="ColorPool-"+Color._id)
					.colorClick.border(style="background-Color:#"+Color.rgb+"; height: 30px", data-pdspuid=Pdspu._id, data-colorid=Color._id, data-rgb=Color.rgb, data-code=Color.code, data-option=1, title=Color.code)
					.code.text-center(style="Font-size: 8px", title=Color.code) #{colorCode}
	script(src="/js/bser/pdspu/pdcolor.js")